package chapter4;

public class Q4 {

	public static void main(String[] args) {
		int lineCount = 4; //변수 정의 라인 수 4줄
		int starCount = 1;
		int spaceCount = lineCount/2 +1; //3이 됨, 정수라서 나머지 생각X
		
		for(int i = 0; i<lineCount; i++) {
			for(int j = 0; j<spaceCount; i++) { //left
				System.out.print(" ");
			}
			
			for(int j = 0; j<starCount; j++) {
				System.out.print("*");
			}
			
			for(int j = 0; j<spaceCount; i++) { //right
				System.out.print(" ");
			}
		}
	}

}
